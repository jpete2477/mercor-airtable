# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_DEBUG=false
PORT=5000

# Airtable Configuration (REQUIRED)
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=512
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Redis Configuration (Optional - will use in-memory if not provided)
REDIS_URL=redis://redis:6379/0

# Application Settings
MAX_JSON_SIZE=102400
SHORTLIST_MIN_SCORE=2
RATE_LIMIT_PER_MINUTE=60

# Test Configuration (Optional)
AIRTABLE_TEST_API_KEY=your_test_airtable_api_key
AIRTABLE_TEST_BASE_ID=your_test_airtable_base_id